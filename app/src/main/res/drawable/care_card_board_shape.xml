<?xml version="1.0" encoding="utf-8" ?> <!--相当于做了一张圆角的图片,然后给button作为背景图片-->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle"> <!--设置背景色-->
    <solid android:color="#EDEDF2" /> <!--设置圆角-->
    <corners android:radius="17dp" />
    <padding
        android:left="20dp"
        android:top="10dp"
        android:right="20dp"
        android:bottom="10dp" />
    <stroke android:color="@color/buttonBlue" android:width="1dp" />
</shape>