<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:background="@color/allBack"
        android:layout_width="240dp"
        android:layout_height="320dp">

        <RadioGroup
            android:id="@+id/grade_rg"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:text="星標聯繫人"
                android:id="@+id/star_rb"
                android:layout_marginTop="12dp"
                android:textSize="16sp"
                android:button="@drawable/radio_button_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioButton
                android:text="一般聯繫人"
                android:checked="true"
                android:id="@+id/normal_rb"
                android:button="@drawable/radio_button_style"
                android:layout_marginTop="12dp"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioButton
                android:text="屏蔽聯繫人"
                android:id="@+id/block_rb"
                android:button="@drawable/radio_button_style"
                android:layout_marginTop="12dp"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RadioGroup>

        <LinearLayout
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/cancel_tv"
                android:text="取消"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="14sp"
                android:layout_marginRight="5dp"
                android:textColor="@color/textGray"
                android:background="@drawable/reject_btn_shape"
                android:layout_height="30dp" />

            <TextView
                android:id="@+id/finish_tv"
                android:text="確定"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="14sp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"
                android:background="@drawable/accept_btn_shape"
                android:layout_height="30dp" />



        </LinearLayout>

    </RelativeLayout>


</LinearLayout>
