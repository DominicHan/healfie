<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/allBack"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="106dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="21dp"
            android:src="@mipmap/ic_back_normal"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="60dp"
            android:text="聯繫人审核"
            android:textColor="@color/textBlack"
            android:textSize="27sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/allBack"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <RelativeLayout
            android:id="@+id/rl_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_shape5">

            <RelativeLayout
                android:id="@+id/rl_info"
                android:layout_marginTop="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_marginLeft="36dp"
                    android:layout_centerVertical="true"
                    android:textSize="30sp"
                    android:textColor="@color/textBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <com.fn.healfie.component.RoundImageView
                    android:id="@+id/rv_image"
                    android:layout_width="66dp"
                    android:layout_height="67dp"
                    android:layout_marginRight="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="#00000000" />

            </RelativeLayout>

            <LinearLayout
                android:layout_below="@id/rl_info"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:paddingLeft="13dp"
                android:paddingRight="13dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/grey_bg_shape"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/mark_tv"
                    android:textColor="#999999"
                    android:textSize="13sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="35dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/reject_tv"
            android:background="@drawable/reject_btn_shape"
            android:textColor="#999"
            android:textSize="20sp"
            android:gravity="center"
            android:text="拒絕"
            android:layout_width="0dp"
            android:layout_weight="13"
            android:layout_height="45dp" />

        <TextView
            android:id="@+id/accept_tv"
            android:background="@drawable/accept_btn_shape"
            android:text="同意"
            android:textColor="#fff"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="20"
            android:layout_marginLeft="15dp"
            android:layout_height="45dp" />

    </LinearLayout>


</LinearLayout>
